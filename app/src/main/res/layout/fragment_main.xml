<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context="pl.kp_software.synoptyk.MainFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/measurementsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Dane synoptyczne" />

            <TextView
                android:id="@+id/measurementsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Najbliższe dane synoptyczne\n(włącz lokalizację, aby zobaczyć)"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/metarsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Depesze METAR" />

            <TextView
                android:id="@+id/metarTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Najbliższa depesza matar\n(włącz lokalizację, aby zobaczyć)"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/giosButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Pomiary jakości powietrza" />

            <TextView
                android:id="@+id/giosTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Najbliższy pomiar jakości powietrza\n(włącz lokalizację, aby zobaczyć)"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/forecastsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Prognoza warunków meteo" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
